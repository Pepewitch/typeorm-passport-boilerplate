{
  "name": "express-mysql-boilerplate",
  "version": "1.0.0",
  "description": "boilerplate for express app with mysql database",
  "repository": {
    "type": "git",
    "url": "git://github.com/Pepewitch/express-mysql-boilerplate.git"
  },
  "scripts": {
    "start": "ts-node src/server.ts",
    "build": "npm run build-ts && npm run tslint",
    "serve": "node dist/server.js",
    "watch-node": "nodemon dist/server.js --watch",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "clear": "rimraf dist/*",
    "ts-jest": "ts-jest",
    "jest": "jest",
    "http-server": "http-server"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.18.3",
    "cors": "^2.8.4",
    "dotenv": "^6.1.0",
    "express": "^4.16.4",
    "express-session": "^1.15.6",
    "helmet": "^3.14.0",
    "morgan": "^1.9.1",
    "multer": "^1.4.1",
    "mysql": "^2.14.1",
    "passport": "^0.4.0",
    "passport-facebook": "^2.1.1",
    "passport-google-oauth2": "^0.1.6",
    "passport-local": "^1.0.0",
    "passport-spotify": "^1.0.1",
    "reflect-metadata": "^0.1.10",
    "request": "^2.88.0",
    "typeorm": "^0.2.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.16.0",
    "@types/express-session": "^1.15.11",
    "@types/helmet": "0.0.42",
    "@types/jest": "^23.3.8",
    "@types/morgan": "^1.7.35",
    "@types/multer": "^1.3.7",
    "@types/mysql": "^2.15.5",
    "@types/node": "^8.10.36",
    "@types/passport": "^0.4.6",
    "@types/passport-facebook": "^2.1.8",
    "@types/passport-google-oauth2": "^0.1.2",
    "@types/passport-local": "^1.0.33",
    "@types/supertest": "^2.0.6",
    "concurrently": "^4.0.1",
    "http-server": "^0.11.1",
    "jest": "^23.6.0",
    "nodemon": "^1.18.5",
    "rimraf": "^2.6.2",
    "supertest": "^3.3.0",
    "ts-jest": "^23.10.4",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.1.3"
  },
  "nodemonConfig": {
    "delay": "1000"
  }
}
